# PACA Production Environment Configuration

# Application Settings
PACA_ENV=production
PACA_VERSION=1.0.0
PACA_DEBUG=false
PACA_LOG_LEVEL=INFO

# Server Configuration
PACA_HOST=0.0.0.0
PACA_PORT=8000
PACA_WORKERS=4

# Security Settings
PACA_SECRET_KEY=your-secret-key-here
PACA_ENCRYPTION_KEY=your-encryption-key-here
PACA_ALLOW_ORIGINS=["http://localhost:3000", "https://yourdomain.com"]

# API Configuration
PACA_API_TIMEOUT=30
PACA_MAX_REQUESTS_PER_MINUTE=100
PACA_MAX_TOOL_EXECUTION_TIME=300

# Tool Configuration
PACA_ENABLE_WEB_SEARCH=true
PACA_ENABLE_FILE_MANAGER=true
PACA_SANDBOX_MODE=true

# Web Search API Keys (Replace with actual keys)
GOOGLE_API_KEY=your-google-api-key
GOOGLE_CSE_ID=your-google-cse-id
BING_API_KEY=your-bing-api-key
DUCKDUCKGO_RATE_LIMIT=10

# File Manager Settings
PACA_SANDBOX_PATH=/var/lib/paca/sandbox
PACA_MAX_FILE_SIZE=10485760
PACA_ALLOWED_EXTENSIONS=.txt,.json,.py,.md,.csv,.xml

# Memory and Performance
PACA_MAX_MEMORY_MB=1024
PACA_GC_THRESHOLD_0=700
PACA_GC_THRESHOLD_1=10
PACA_GC_THRESHOLD_2=10

# Monitoring and Logging
PACA_METRICS_ENABLED=true
PACA_METRICS_PORT=9090
PACA_LOG_FORMAT=json
PACA_LOG_FILE=/var/log/paca/paca.log

# Database (if needed for user feedback)
PACA_DB_URL=sqlite:///var/lib/paca/feedback.db
PACA_DB_POOL_SIZE=10